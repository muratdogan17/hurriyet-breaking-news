{
  "manifest_version": 2,

  "name": "Hürriyet Yazarlar Eklentisi",
  "description": "Hurriyet.com.tr'ye ait ilk 10 yazarı listeleyen eklenti",
  "version": "1.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Hürriyet Yazarlar"
  },
  "icons": {
    "128": "128.png"
  },
  "background":["assets/js/app.js"],
  "permissions": [
    "activeTab",
    "http://*/*", "https://*/*"
  ]
}